<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#88ffffff"
    android:orientation="vertical"
    android:padding="@dimen/chat_log_item_padding" >

    <TextView
        android:id="@+id/txtContactListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_log_item_margin_horizontal"
        android:layout_marginRight="@dimen/chat_log_item_margin_horizontal"
        android:layout_toLeftOf="@+id/imgContactListItemPicture"
        android:gravity="right"
        android:text="حسام ساجدی"
        android:textColor="#000"
        android:textSize="@dimen/chat_log_item_title_size"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewContactListItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtContactListItemTitle"
        android:layout_marginRight="@dimen/chat_log_item_margin_horizontal"
        android:layout_marginTop="@dimen/chat_log_item_margin_vertical"
        android:layout_toLeftOf="@+id/imgContactListItemPicture"
        android:background="#000" />

    <TextView
        android:id="@+id/txtContactListItemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewContactListItemSeparator"
        android:layout_alignBottom="@+id/imgContactListItemPicture"
        android:layout_marginTop="@dimen/chat_log_item_margin_vertical"
        android:layout_marginLeft="@dimen/chat_log_item_margin_horizontal"
        android:layout_marginRight="@dimen/chat_log_item_margin_horizontal"
        android:layout_toLeftOf="@+id/imgContactListItemPicture"
        android:gravity="right|center_vertical"
        android:text="مشغول کار..."
        android:textColor="#222"
        android:textSize="@dimen/chat_log_item_content_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgContactListItemPicture"
        android:layout_width="@dimen/chat_log_item_pic_size"
        android:layout_height="@dimen/chat_log_item_pic_size"
        android:layout_alignParentRight="true"
        android:background="#555" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imgContactListItemPicture"
        android:layout_marginTop="@dimen/chat_log_item_margin_vertical"
        android:background="#000" />

</RelativeLayout>