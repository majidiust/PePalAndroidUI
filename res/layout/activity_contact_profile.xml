<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="org.ertebat.ui.ContactProfileActivity" >

    <ImageView
        android:id="@+id/imgContactProfileThumbnail"
        android:layout_width="@dimen/user_profile_thumbnail_size"
        android:layout_height="@dimen/user_profile_thumbnail_size"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/user_profile_thumbnail_margin"
        />

    <TextView
        android:id="@+id/txtContactProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgContactProfileThumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/generic_item_margin"
        android:layout_marginTop="@dimen/generic_item_margin"
        android:text="مرتضی ثابت رفتار"
        android:textColor="#fff"
        android:textSize="@dimen/generic_label_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContactProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContactProfileName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/generic_item_margin"
        android:layout_marginTop="@dimen/generic_item_margin"
        android:text="09125300765"
        android:textColor="#fff"
        android:textSize="@dimen/generic_label_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContactProfilePhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/generic_item_margin"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnContactVoiceCall"
            android:layout_width="@dimen/contact_profile_button_size"
            android:layout_height="@dimen/contact_profile_button_size"
            android:layout_margin="@dimen/generic_item_margin"
            android:background="@drawable/style_btn_call_audio" />

        <Button
            android:id="@+id/btnContactVideoCall"
            android:layout_width="@dimen/contact_profile_button_size"
            android:layout_height="@dimen/contact_profile_button_size"
            android:layout_margin="@dimen/generic_item_margin"
            android:background="@drawable/style_btn_call_video" />

        <Button
            android:id="@+id/btnContactChat"
            android:layout_width="@dimen/contact_profile_button_size"
            android:layout_height="@dimen/contact_profile_button_size"
            android:layout_margin="@dimen/generic_item_margin"
            android:background="@drawable/style_btn_chat" />
    </LinearLayout>

</RelativeLayout>